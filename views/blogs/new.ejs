<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 11rem;">
  <%- include("../partials/flash")%>
            <form  action="/blogs" method="POST" style="max-width:70%;margin:10px auto" >
                <div class="mb-3">
                  <label for="name" class="form-label">Title of your blog</label>
                  <input id="title" type="text" class="form-control"  placeholder="Title"  name="blog[title]" required>
                  
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Cover Image URL</label>
                  <input id="img" type="text" class="form-control"  placeholder="Image URL" name="blog[img]" required>
                  
                </div>
                <div class="mb-3">
                  <label for="tags" class="form-label">Enter one word tags decribing your article seprated by commas</label>
                  <input id="tags" type="text" class="form-control"  placeholder="Image URL" name="blog[tags]" required>
                  
                </div>
                
                
                <div class="mb-3" >
                    <label for="desc" class="form-label">Description in less than 50 words</label>
                    <textarea  id="desc" class="form-control" style="white-space: pre-wrap;" cols="20" rows="5" name="blog[content]" required></textarea>
                    
                  </div>
                  <div class="mb-3" id="last"></div>
                  <button type="button" class="btn btn-secondary btn-dark addImg" id="addImg">Add ImageBox</button>
                  <button type="button" class="btn btn-secondary btn-dark addText" id="addText">Add TextBox</button>
                  <div class="mt-3">
                <button id="submitPost" type="submit" class="btn btn-success">Submit Post</button>
                </div>
              </form>
              
   
</div>

<script src="/js/new.js"></script>

<%- include("../partials/footer")%>